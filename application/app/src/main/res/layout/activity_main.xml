<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/backgroundColor"
    tools:context="com.nwhacks.luminescence.wifind.activity.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/actionStatusBarColor"
        tools:layout_editor_absoluteY="0dp">


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:scaleType="centerInside"
            android:src="@drawable/wifindtextandlogo1080" />
    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/currentSSIDMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_corner"
                android:fontFeatureSettings="smcp"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="@color/connectedTextColor"
                android:textSize="10sp" />

            <Button
                android:id="@+id/launcher1Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/white"
                android:paddingTop="10dp"
                android:text="Manually connect to a network"
                tools:backgroundTintMode="screen" />

            <Button
                android:id="@+id/launcher2Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/white"
                android:text="Scan local public networks"
                tools:backgroundTintMode="screen" />

            <Button
                android:id="@+id/launcher3Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/white"
                android:text="Retrieve from server"
                tools:backgroundTintMode="screen" />

            <Button
                android:id="@+id/launcher4Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@android:color/white"
                android:text="See saved networks"
                tools:backgroundTintMode="screen" />

            <Button
                android:id="@+id/launcher5Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="View Networks Map" />


        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
